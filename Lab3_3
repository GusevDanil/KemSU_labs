#include <iostream>

using namespace std;

int getSize (char *string) {
    int i = 0;
    while (string[i] != '\0') i++;
    return i;
}

int wordCounter (char *str) {
    int cntr = 1;
    for (int i = 0; i < getSize(str); i++) if (str[i] == ' ') cntr++;
    return cntr;
}

void bubbleSort (char **text, int textSize) {
    textSize--;
    bool exit = false;
    while (!exit) {
        exit = true;
        for (int i = 0; i < textSize; i++)
            if (wordCounter(text[i]) > wordCounter(text[i + 1])) {
                swap(text[i], text[i + 1]);
                exit = false;
            }
    }
}

int main() {
    int strSize = 40, textSize = 3;
    char **text = new char *[textSize];
    cout << "Please, enter the text: " << endl;
    cin.get();
    for (int i = 0; i < 3; i++) {
        text[i] = new char[strSize];
        cin.getline(text[i], strSize);
    }
    cout << "Text: " << endl;
    for (int i = 0; i < 3; i++) cout << text[i] << endl;
    cout << endl;
    bubbleSort(text, textSize);
    cout << "Sorted text: " << endl;
    for (int i = 0; i < 3; i++) cout << text[i] << endl;
    return 0;
}
