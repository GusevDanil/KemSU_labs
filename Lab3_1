#include <iostream>

using namespace std;

int getSize (char *string) {
    int i = 0;
    while (string[i] != '\0') i++;
    return i;
}

char* concatinatior (char *first, char *second) {
    int newSize = getSize(first) + getSize(second);
    char *conc = (char *) calloc(newSize, sizeof(char));
    int i = 0;
    for (i = 0; i < getSize(first); i++) conc[i] = first[i];
    for (int j = 0; j < getSize(second); j++) conc[i + j] = second[j];
    return conc;
}

int main() {
    char s1[100], s2[100];
    cout << "Enter the first string: " << endl;
    cin.getline(s1, 100);
    cout << "Enter the second string: " << endl;
    cin.getline(s2, 100);
    cout << "Strings: " << endl << s1 << endl << s2 << endl;
    char *s = concatinatior(s1, s2);
    cout << "Concatination: ";
    for (int k = 0; k < getSize(s); k++) cout << s[k];
    return 0;
}
